@model HouseRent.Models.Poster

@{
    ViewData["Title"] = "Перегляд шаблону договору";
}

<h1 class="text-center mb-4">Перегляд шаблону договору</h1>

<div class="container">
    <div class="contract-card shadow-sm mb-4">
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.ContractTemplatePdf))
            {
                <iframe src="@Model.ContractTemplatePdf" width="100%" height="600px" class="document-iframe" frameborder="0" style="border: 1px solid #ddd;"></iframe>
                @if (!string.IsNullOrEmpty(Model.ContractTemplateImage))
                {
                    <p class="mt-3">Завантажити оригінальний файл:</p>
                    <a href="@Model.ContractTemplateImage" download class="btn btn-primary">Завантажити .docx</a>
                }
                else
                {
                    <p class="mt-3 text-danger">Оригінальний файл (.docx) недоступний.</p>
                    if (ViewBag.DocxError != null)
                    {
                        <p class="text-danger">@ViewBag.DocxError</p>
                    }
                }
            }
            else
            {
                <p class="text-danger">Шаблон договору (PDF) не знайдено.</p>
            }
        </div>
        <div class="card-footer text-center">
            <a asp-controller="Posters" asp-action="Details" asp-route-id="@ViewBag.PosterId" class="btn btn-secondary">Повернутися</a>
        </div>
    </div>
</div>