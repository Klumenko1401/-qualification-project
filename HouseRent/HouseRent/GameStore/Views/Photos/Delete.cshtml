@model GameStore.Models.Photo

@{
    ViewData["Title"] = "Delete";
}

<h3>Ви точно хочете видалити це фото?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Оголошення
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Poster.Name)
        </dd class>
        <dt class = "col-sm-2">
            Зображення
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Image" alt="avatar" width="200px;" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
    </form>
</div>
