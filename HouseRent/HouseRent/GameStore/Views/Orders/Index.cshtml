@model IEnumerable<GameStore.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Оголошення
            </th>
            <th>
                Дата оформлення
            </th>
            <th>
                Статус
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="Posters" asp-action="Details" asp-route-id="@item.PosterID">@Html.DisplayFor(modelItem => item.Poster.Name)</a>
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ID">Детальна інформація</a>
            </td>
        </tr>
}
    </tbody>
</table>
